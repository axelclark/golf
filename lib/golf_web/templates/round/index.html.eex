<h1>Listing Rounds</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Date</th>
      <th>Score</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for round <- @rounds do %>
    <tr>
      <td><%= link round.course.name, to: Routes.round_path(@conn, :show, round) %></td>
      <td><%= round.started_on %></td>
      <td><%= display_score(round.total_score) %></td>
      <td>
        <%= link "Edit", to: Routes.round_path(@conn, :edit, round), class: "button button-outline" %>
      </td>
      <td>
        <%= link "Delete", to: Routes.round_path(@conn, :delete, round), method: :delete, data: [confirm: "Are you sure?"], class: "button button-outline" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
